{
	"info": {
		"_postman_id": "tjt-walton-auth-collection",
		"name": "TJT-Walton API",
		"description": "Complete API collection for TJT-Walton authentication system",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"item": [
		{
			"name": "Authentication",
			"item": [
				{
					"name": "Signup (Create Account)",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"firstname\": \"Sara\",\n  \"lastname\": \"Ahmed\",\n  \"familyname\": \"Rahman\",\n  \"email\": \"sara@test.com\",\n  \"password\": \"123456\"\n}"
						},
						"url": {
							"raw": "{{baseUrl}}/auth/signup",
							"host": ["{{baseUrl}}"],
							"path": ["auth", "signup"]
						},
						"description": "Create a new user account. Returns user data and JWT token."
					},
					"response": []
				},
				{
					"name": "Signin (Login)",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"email\": \"sara@test.com\",\n  \"password\": \"123456\"\n}"
						},
						"url": {
							"raw": "{{baseUrl}}/auth/signin",
							"host": ["{{baseUrl}}"],
							"path": ["auth", "signin"]
						},
						"description": "Login with email and password. Returns user data and JWT token."
					},
					"response": []
				},
				{
					"name": "Get Current User (Protected)",
					"request": {
						"method": "GET",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{token}}",
								"description": "JWT Token from signin/signup"
							}
						],
						"url": {
							"raw": "{{baseUrl}}/auth/me",
							"host": ["{{baseUrl}}"],
							"path": ["auth", "me"]
						},
						"description": "Get current logged in user details. Requires JWT token in Authorization header."
					},
					"response": []
				}
			]
		},
		{
			"name": "Users (CRUD)",
			"item": [
				{
					"name": "Get All Users",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{baseUrl}}/users",
							"host": ["{{baseUrl}}"],
							"path": ["users"]
						},
						"description": "Get all users (passwords excluded)"
					},
					"response": []
				},
				{
					"name": "Get User by ID",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{baseUrl}}/users/:id",
							"host": ["{{baseUrl}}"],
							"path": ["users", ":id"],
							"variable": [
								{
									"key": "id",
									"value": "USER_ID_HERE",
									"description": "User ID from database"
								}
							]
						},
						"description": "Get a specific user by ID"
					},
					"response": []
				},
				{
					"name": "Create User",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"firstname\": \"John\",\n  \"lastname\": \"Doe\",\n  \"familyname\": \"Smith\",\n  \"email\": \"john@test.com\",\n  \"password\": \"123456\",\n  \"role\": \"user\"\n}"
						},
						"url": {
							"raw": "{{baseUrl}}/users",
							"host": ["{{baseUrl}}"],
							"path": ["users"]
						},
						"description": "Create a new user"
					},
					"response": []
				},
				{
					"name": "Update User",
					"request": {
						"method": "PUT",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"firstname\": \"Updated Name\",\n  \"role\": \"admin\"\n}"
						},
						"url": {
							"raw": "{{baseUrl}}/users/:id",
							"host": ["{{baseUrl}}"],
							"path": ["users", ":id"],
							"variable": [
								{
									"key": "id",
									"value": "USER_ID_HERE",
									"description": "User ID to update"
								}
							]
						},
						"description": "Update an existing user"
					},
					"response": []
				},
				{
					"name": "Delete User",
					"request": {
						"method": "DELETE",
						"header": [],
						"url": {
							"raw": "{{baseUrl}}/users/:id",
							"host": ["{{baseUrl}}"],
							"path": ["users", ":id"],
							"variable": [
								{
									"key": "id",
									"value": "USER_ID_HERE",
									"description": "User ID to delete"
								}
							]
						},
						"description": "Delete a user"
					},
					"response": []
				}
			]
		}
	],
	"variable": [
		{
			"key": "baseUrl",
			"value": "http://localhost:5000/api",
			"type": "string"
		},
		{
			"key": "token",
			"value": "YOUR_JWT_TOKEN_HERE",
			"type": "string"
		}
	]
}
